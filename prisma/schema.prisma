generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}



model EcommerceUser{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  fullname String
  password String 
  wishlist EcommerceProductData[] @unique
  cart EcommerceProduct[] @unique
  orders Orders[]
}



type Ratings{
    count Int
    rate Int
}

type EcommerceProductData{
    category String
    description String
    id Int
    image String 
    price Int
    rating Ratings
    title String
}

type EcommerceProduct{
  product EcommerceProductData
  productCount Int
}

type Orders{
  orderData EcommerceProduct[]
  orderDate DateTime @default(now())
}
